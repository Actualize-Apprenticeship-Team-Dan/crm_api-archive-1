<div id="app">
  <section class="charts">
    <div class="container-fluid">
      <header>
        <h1 class="h3">All Leads</h1>
      </header>
      <div class="row">
        <div class="form-group">
          <input type="text" v-model="search" class="form-control" placeholder="search" />
        </div>
      </div>

      <div class="row">
        <div class="table-responsive leads-table">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Created</th>
                <th v-on:click="sortAscDec('first_name')">First Name</th>
                <th v-on:click="sortAscDec('last_name')">Last Name</th>
                <th v-on:click="sortAscDec('email')">Email</th>
                <th v-on:click="sortAscDec('phone')">Phone</th>
                <th v-on:click="sortAscDec('appointment_date')">Appointment Date</th>
                <th v-on:click="sortAscDec('notes')">Notes</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="lead in filteredLeads" v-on:click="showEvents(lead)" v-bind:id="'lead-' + lead.id" v-bind:style=" rowColor(lead)">
                <td>{{ moment(lead.created_at).format('dddd MMM Do YYYY, h:mm a') }}</td>
                <td>{{ lead.first_name }}</td>
                <td>{{ lead.last_name }}</td>
                <td><a v-bind:href="'/leads/' + lead.id + '/edit'" v-on:click.stop="showEvents()">{{ lead.email }}</a></td>
                <td>{{ lead.phone }}</td>
                <td>{{ moment(lead.appointment_date).format('dddd MMM Do YYYY, h:mm a') }}</td>
                <td>{{ lead.notes }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

